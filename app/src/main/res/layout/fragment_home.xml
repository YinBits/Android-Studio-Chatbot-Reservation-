<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cinza"
    tools:context=".Perfil"
    tools:layout_editor_absoluteX="9dp"
    tools:layout_editor_absoluteY="0dp">



    <View
        android:id="@+id/container_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/container_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/imgProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="@id/container_user"
        app:layout_constraintEnd_toEndOf="@id/container_user"
        app:layout_constraintStart_toStartOf="@id/container_user"
        app:layout_constraintTop_toTopOf="@id/container_user" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem vindo,"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/container_user"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        />
    <TextView
        android:id="@+id/textNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario!"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/container_user"
        app:layout_constraintTop_toBottomOf="@id/text"

        android:layout_marginLeft="8dp"
        />

    <View
        android:id="@+id/container_notification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/container_notificatiion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#D9D9D9"
        />
    <ImageView

        android:id="@+id/notification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintBottom_toBottomOf="@id/container_notification"
        app:layout_constraintEnd_toEndOf="@id/container_notification"
        app:layout_constraintStart_toStartOf="@id/container_notification"
        app:layout_constraintTop_toTopOf="@id/container_notification" />

    <View
        android:id="@+id/search_bar"
        android:layout_width="292dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@id/container_user"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/container_search"
        />

    <ImageView
        android:id="@+id/search_badge"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/container_user"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        />

    <EditText
        android:id="@+id/textSearch_bar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/container_user"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:text="Procure seu prato..."
        android:textColor="#c1c1c1"

        />

    <View
        android:id="@+id/container_filter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_bar"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#D9D9D9"
        />

    <ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/ic_filter"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/search_bar"
    android:layout_marginRight="10dp"
    android:layout_alignParentBottom="true"
    android:backgroundTint="#D9D9D9"
    />




</androidx.constraintlayout.widget.ConstraintLayout>