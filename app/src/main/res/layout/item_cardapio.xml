<!-- res/layout/item_cardapio.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_bg"
    android:backgroundTint="@color/white"
    android:outlineSpotShadowColor="@color/black"
    android:handwritingBoundsOffsetRight="@dimen/cardview_compat_inset_shadow"
    android:outlineAmbientShadowColor="@color/black"
    >

<LinearLayout
    android:id="@+id/card"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:background="@drawable/card"
    android:orientation="vertical"
    android:padding="15dp"

    >
    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/container_perfil"
        android:contentDescription="@null"
        android:layout_gravity="center"
        android:background="@drawable/rounded_bg"
        />

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Item"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/itemDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição do Item"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/itemPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço: R$ 0.00"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
</LinearLayout>
